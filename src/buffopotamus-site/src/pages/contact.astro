      </div>
    </div>
  </div>

  <script>
    // Simple form validation and submission handling
    document.getElementById('contact-form').addEventListener('submit', function(e) {
      e.preventDefault();
      
      // In a real implementation, this would send the form data to a backend
      alert('Thank you for your message! Biff will read it soon!');
      this.reset();
    });
  </script>

  <style>
    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border-width: 0;
    }
    
